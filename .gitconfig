[user]
    name = Hleb Kastseika
    email = me@hleb.dev
    username = hleb-kastseika
[core]
    autocrlf = input
    editor = vim
[diff]
    tool = vimdiff
    algorithm = histogram
    mnemonicPrefix = true
    renames = true
    colorMoved = true
[difftool]
    prompt = false
[commit]
    verbose = true
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true
[pull]
    rebase = true
[merge]
    tool = vimdiff
    conflictstyle = diff3
[branch]
    sort = -committerdate
[column]
	ui = auto
[tag]
    sort = version:refname
[init]
    defaultBranch = main
[push]
    autoSetupRemote = true
    followTags = true
[fetch]
    all = true
    prune = true
    pruneTags = true
